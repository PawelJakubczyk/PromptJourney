root = true

# All files
[*]
indent_style = space

# Xml files
[*.xml]
indent_size = 2

[*.cs]
# Encoding and line endings
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Place opening braces on a new line for all types of blocks
csharp_new_line_before_open_brace = all: true

# Place each method declaration parameter on a new line if multiple
csharp_new_line_between_method_declaration_parameters = true

# Place each argument of method calls on a new line if multiple
csharp_new_line_between_method_call_arguments = true

# Remove spaces inside method parentheses
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_between_method_declaration_parameter_list_parentheses = false

# Indentation settings
csharp_indent_block_contents = true           # Indent contents of code blocks
csharp_indent_braces = false                  # Keep braces at the same level as block start
csharp_indent_switch_labels = true            # Indent switch labels

# Preserve single line statements only if simple
csharp_preserve_single_line_statements = false

# Prefer simple default expressions (optional)
dotnet_style_prefer_simple_default_expression = true
